{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2018", "dom"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths":{
            "@shared/*": ["src/app/shared/*"],
            "@components/*": ["src/app/components/*"],
            "@services/*": ["src/app/services/*"],
            "@models/*": ["src/app/models/*"],
            "@interceptors/*": ["src/app/services/core/interceptors/*"],
            "@resolvers/*": ["src/app/services/core/resolvers/*"],
            "@guards/*": ["src/app/services/core/guards/*"],
            "@common/*": ["src/app/components/common/*"]
        }
    },
}
